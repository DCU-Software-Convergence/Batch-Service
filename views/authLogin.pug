extends layout

block content
    -if (!email_and_password_match) 
        <div class="alert alert-danger">
            <strong>로그인 실패!</strong> 이메일 혹은 비밀번호가 틀렸습니다.
        </div>
    div(class="row")
        div(class="col-md-4")
        div(class="col-md-4")
            br
            br
            h1 로그인
            hr
            br
            
            <form action="/auth/Login" class="was-validated" method="post">
                <div class="form-group">
                    <label for="uname">Email:</label>
                    <input type="text" class="form-control" id="email" placeholder="Enter email" name="login_email" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="login_pswd" required>
                    <div class="valid-feedback">Valid.</div>
                    <div class="invalid-feedback">Please fill out this field.</div>
                </div>
                <button type="submit" class="btn btn-info">로그인</button>
            </form>
            br
            br
            br
            br
            br
            br
            br
            br
        div(class="col-md-4")
        